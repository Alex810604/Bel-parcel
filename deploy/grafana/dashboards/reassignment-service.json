{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "grafana" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "enable": true,
        "expr": "ALERTS{alertname=~\"ReassignmentOutboxGrowing|ReassignmentDLQNotEmpty|HighTimeoutRate\",alertstate=\"firing\"}",
        "iconColor": "rgba(255, 0, 0, 1)",
        "name": "Prometheus Alerts"
      }
    ]
  },
  "editable": true,
  "liveNow": false,
  "panels": [
    {
      "type": "timeseries",
      "title": "Outbox Queue Size",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "reassignment_outbox_queue_size{instance=~\"$instance\"}",
          "legendFormat": "size",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 51 },
              { "color": "red", "value": 101 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "DLQ Size",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "reassignment_dlq_size{instance=~\"$instance\"}",
          "legendFormat": "dlq",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Reassignments Rate",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(reassignments_total{instance=~\"$instance\"}[5m])",
          "legendFormat": "reassign/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops/s" },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Confirmation Timeouts Rate",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(confirmation_timeouts_total{instance=~\"$instance\"}[5m])",
          "legendFormat": "timeouts/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops/s" },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Active Alerts",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "ALERTS{alertname=~\"ReassignmentOutboxGrowing|ReassignmentDLQNotEmpty|HighTimeoutRate\",alertstate=\"firing\"}",
          "legendFormat": "{{alertname}}",
          "refId": "A"
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "keepLabels": ["alertname", "severity"] } }
      ],
      "options": { "showHeader": true }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["bel-parcel", "reassignment"],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(reassignment_outbox_queue_size, instance)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  "timezone": "browser",
  "title": "Reassignment Service",
  "uid": "reassignment-service-overview",
  "version": 1
}
