{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "grafana"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "enable": true,
        "expr": "ALERTS{alertname=~\"BatchOutboxGrowing|BatchDLQNotEmpty\",alertstate=\"firing\"}",
        "iconColor": "rgba(255, 0, 0, 1)",
        "name": "Prometheus Alerts"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "stat",
      "title": "Health Status",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "probe_success{job=\"batching-service\", instance=~\"$instance\"}",
          "legendFormat": "health",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ],
          "unit": "none"
        },
        "overrides": []
      },
      "description": "1 = сервис жив, 0 = недоступен"
    },
    {
      "type": "timeseries",
      "title": "Outbox Queue Size",
      "gridPos": { "x": 8, "y": 0, "w": 16, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "batch_outbox_queue_size{instance=~\"$instance\"}",
          "legendFormat": "size",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 51 },
              { "color": "red", "value": 101 }
            ]
          }
        },
        "overrides": []
      },
      "description": "Количество записей со статусами pending/error. >100 дольше 5 минут → алерт"
    },
    {
      "type": "stat",
      "title": "Dead Letter Queue (Current)",
      "gridPos": { "x": 0, "y": 6, "w": 8, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "batch_dlq_size{instance=~\"$instance\"}",
          "legendFormat": "dlq",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "description": "Записи после 10 попыток. Требуют ручной обработки."
    },
    {
      "type": "timeseries",
      "title": "Dead Letter Queue (1h)",
      "gridPos": { "x": 8, "y": 6, "w": 16, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "batch_dlq_size{instance=~\"$instance\"}",
          "legendFormat": "dlq",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none" },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Publish Errors Rate",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(batch_errors_total{topic=~\"$topic\",instance=~\"$instance\"}[5m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "errors/s" },
        "overrides": []
      },
      "description": "Скорость неудачных попыток отправки в выбранный топик"
    },
    {
      "type": "timeseries",
      "title": "Retry Attempts Distribution (p50/p95)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(outbox_retry_attempts_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(outbox_retry_attempts_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none" },
        "overrides": []
      },
      "description": "Перцентили количества попыток до успеха"
    },
    {
      "type": "table",
      "title": "Active Alerts",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "ALERTS{alertname=~\"BatchOutboxGrowing|BatchDLQNotEmpty\",alertstate=\"firing\"}",
          "legendFormat": "{{alertname}}",
          "refId": "A"
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "keepLabels": ["alertname", "severity"] } }
      ],
      "options": {
        "showHeader": true
      },
      "description": "Текущие активные алерты для batching-service"
    }
    ,
    {
      "type": "timeseries",
      "title": "Batch Flush Duration (p50/p95)",
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(batch_flush_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(batch_flush_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "description": "Перцентили времени формирования партии"
    },
    {
      "type": "timeseries",
      "title": "Active Groups",
      "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "batch_active_groups{instance=~\"$instance\"}",
          "legendFormat": "groups",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none" },
        "overrides": []
      },
      "description": "Количество активных групп склад+ПВЗ в памяти"
    },
    {
      "type": "timeseries",
      "title": "Orders Added per Warehouse (rate)",
      "gridPos": { "x": 0, "y": 36, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (warehouse_id) (rate(batch_orders_added_total{instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{warehouse_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops/s" },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "description": "Скорость добавления заказов по складам"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["bel-parcel", "batching", "outbox"],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(batch_outbox_queue_size, instance)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "current": { "text": "All", "value": "$__all" }
      },
      {
        "name": "topic",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(batch_errors_total, topic)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  "timezone": "browser",
  "title": "Batching Service",
  "uid": "batching-service-overview",
  "version": 1,
  "weekStart": ""
}
