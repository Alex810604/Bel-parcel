{
  "uid": "reference-service",
  "title": "Reference Service",
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "HTTP 5xx rate",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(reference_requests_total{code=~\"5..\"}[5m]) / rate(reference_requests_total[5m])",
          "legendFormat": "5xx rate"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Request p95",
      "gridPos": { "x": 6, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(reference_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Outbox backlog",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 6 },
      "targets": [
        { "expr": "reference_outbox_pending", "legendFormat": "pending" }
      ]
    },
    {
      "type": "graph",
      "title": "Outbox age p95",
      "gridPos": { "x": 6, "y": 8, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(reference_outbox_event_age_seconds_bucket[5m]))",
          "legendFormat": "p95 age"
        }
      ]
    }
  ]
}
